{{> profileHeader}}

<div class="data-container">
  <div class="title">
    <h2>PERSONAL DATA</h2>
  </div>
  <div class="data-content">
    <div class="personal">
      <p><strong>NAME: </strong>{{user.firstName}} {{user.lastName}}</p>
      <p><strong>BIRTH DATE: </strong>{{user.birthDate}}</p>
      <p><strong>ADDRESS: </strong>{{user.address}}</p>
      <p><strong>EMAIL: </strong>{{user.email}}</p>
      <p><strong>PHONE NUMBER: </strong>{{user.phoneNumber}}</p>
    </div>
    <div class="emergency-contact">
      <h3>Emergency Contact</h3>
      <p><strong>NAME: </strong>{{user.emergencyContact.firstName}} {{user.emergencyContact.lastName}}</p>
      <p><strong>ADDRESS: </strong>{{user.emergencyContact.address}}</p>
      <p><strong>EMAIL: </strong>{{user.emergencyContact.email}}</p>
      <p><strong>PHONE NUMBER: </strong>{{user.emergencyContact.phoneNumber}}</p>
    </div>
  </div>
</div>

<div class="specs">
  <nav class="nav_tabs">
    <ul>
      <li>
        <input type="radio" name="tabs" class="rd_tabs" id="userNeeds">
        <label for="userNeeds" class="rd_lbl">USER NEEDS</label>
        <div id="needs" class="needs content">
          <ul>
            {{#each user.specificNeeds}}
            <li> - {{this}}</li>
            {{/each}}
          </ul>
          <div class="notes">
            <h3>NOTES</h3>
